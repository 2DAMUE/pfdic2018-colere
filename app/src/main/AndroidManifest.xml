<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyecto.colere.easyfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.proyecto.colere.easyfood.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.proyecto.colere.easyfood.SignIn" />
        <activity android:name="com.proyecto.colere.easyfood.SignUp" />
        <activity
            android:name="com.proyecto.colere.easyfood.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name="com.proyecto.colere.easyfood.FoodList" />
        <activity android:name="com.proyecto.colere.easyfood.FoodDetail" />
        <activity android:name="com.proyecto.colere.easyfood.Cart" />
        <activity android:name="com.proyecto.colere.easyfood.OrderStatus" />

        <service android:name="com.proyecto.colere.easyfood.Service.MyFirebaseIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="com.proyecto.colere.easyfood.Service.MyFirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>